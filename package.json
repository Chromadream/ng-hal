{
  "name": "ng2-hal",
  "version": "0.1.2",
  "description": "An HAL Navigator for Angular2",
  "keywords": [
    "ng2",
    "angular2",
    "hal",
    "hypermedia",
    "rest",
    "http",
    "json"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "build": "npm run dist",
    "ci": "npm run build && npm run test",
    "clean": "npm cache clean && npm run rimraf -- node_modules doc coverage dist gh-pages",
    "clean:dist": "npm run rimraf -- dist",
    "clean:ghpages": "npm run rimraf -- gh-pages",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "demo": "npm run demo:dev",
    "predemo:dev": "npm run clean:ghpages",
    "demo:dev": "webpack --config config/webpack.dev.js --progress --profile --colors --display-error-details --display-cached",
    "predemo:prod": "npm run clean:ghpages",
    "demo:prod": "webpack --config config/webpack.prod.js  --progress --profile --colors --display-error-details --display-cached --bail",
    "docs": "typedoc --options typedoc.json lib/index.ts",
    "ghpages": "npm run ghpages:prod",
    "ghpages:dev": "webpack --config config/webpack.ghpages.js --progress --profile --colors --display-error-details --display-cached --github-dev",
    "ghpages:prod": "webpack --config config/webpack.ghpages.js --progress --profile --colors --display-error-details --display-cached --github-prod",
    "lint": "npm run tslint \"lib/**/*.ts\"",
    "predist": "npm run clean:dist",
    "dist": "tsc -p lib",
    "server": "npm run server:dev",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --progress --profile --colors --watch --display-error-details --display-cached --content-base demo/",
    "start": "npm run server:dev",
    "test": "karma start",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "halfred": "^1.0.0",
    "uri-templates": "^0.2.0"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/http": "^2.0.0",
    "rxjs": "^5.0.0-beta.12",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "@angular/common": "^2.0.1",
    "@angular/compiler": "^2.0.1",
    "@angular/core": "^2.0.1",
    "@angular/forms": "^2.0.1",
    "@angular/http": "^2.0.1",
    "@angular/platform-browser": "^2.0.1",
    "@angular/platform-browser-dynamic": "^2.0.1",
    "@angular/platform-server": "^2.0.1",
    "@angular/router": "^3.0.1",
    "@angularclass/hmr": "^1.2.1",
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.2.34",
    "@types/node": "^6.0.41",
    "@types/source-map": "^0.1.27",
    "@types/uglify-js": "^2.6.28",
    "@types/webpack": "^1.12.34",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^2.2.4",
    "codelyzer": "1.0.0-beta.0",
    "copy-webpack-plugin": "^3.0.1",
    "core-js": "^2.4.0",
    "css-loader": "^0.25.0",
    "gh-pages": "^0.11.0",
    "html-webpack-plugin": "^2.22.0",
    "http-server": "^0.9.0",
    "ie-shim": "^0.1.0",
    "jasmine-core": "^2.5.2",
    "json-loader": "^0.5.4",
    "karma": "^1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-remap-coverage": "^0.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "1.8.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "rxjs": "5.0.0-beta.12",
    "source-map-loader": "^0.1.5",
    "to-string-loader": "^1.1.5",
    "ts-helpers": "^1.1.1",
    "tslint": "^3.15.1",
    "typedoc": "^0.4.5",
    "typescript": "^2.0.3",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-md5-hash": "0.0.5",
    "webpack-merge": "^0.14.1",
    "zone.js": "~0.6.25"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },
  "author": "David Herges <david@spektrakel.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dherges/ng2-hal.git"
  },
  "bugs": {
    "url": "https://github.com/dherges/ng2-hal/issues"
  },
  "homepage": "https://dherges.github.io/ng2-hal"
}
