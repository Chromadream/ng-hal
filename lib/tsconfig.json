{
  "angularCompilerOptions": {
    "entryModule": "./src/hal.module#HalModule",
    "genDir": "./.ng-aot"
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "stripInternal": true,
    "baseUrl": "",
    "rootDir": "./src",
    "outDir": "../dist/ng-hal",
    "types": [
      "core-js",
      "jasmine",
      "node",
      "source-map",
      "uglify-js",
      "webpack"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "gh-pages",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "**/*.spec.ts"
  ]
}
